<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#fff"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Country Name"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:id="@+id/updateAvailableText" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please select from the list only."
        android:textAlignment="center"
        android:layout_below="@id/updateAvailableText"
        android:id="@+id/suggestion"
        android:layout_marginTop="5dp" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/suggestion"
        android:hint="Search..."
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/search_icon"
        android:drawablePadding="10dp"
        android:id="@+id/countrySearchAutoComplete" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:layout_below="@id/countrySearchAutoComplete"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#1E88E5"
        android:id="@+id/yesActionButton_UpdateDialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="NO"
        android:layout_below="@id/countrySearchAutoComplete"
        android:layout_toStartOf="@id/yesActionButton_UpdateDialog"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="20dp"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:id="@+id/noActionTextView_UpdateDialog"
        android:focusable="true" />
</RelativeLayout>